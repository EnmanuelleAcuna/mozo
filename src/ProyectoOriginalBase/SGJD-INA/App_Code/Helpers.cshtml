                @Nombre
            </span>
            break;
        // Fin acuerdos

        // Actas
        case "AC-TRANS":
            <span class="blue-grey-text">
                <i class="fa fa-fw fa-keyboard">&nbsp;</i>
                @Nombre
            </span>
            break;
        case "AC-VB":
            <span class="green-text">
                <i class="fa fa-fw fa-user-check">&nbsp;</i>
                @Nombre
            </span>
            break;
        case "AC-CC":
            <span class="orange-text">
                <i class="fa fa-fw fa-tasks">&nbsp;</i>
                @Nombre
            </span>
            break;
        case "AC-APROB":
            <span class="green-text">
                <i class="fa fa-fw fa-check">&nbsp;</i>
                @Nombre
            </span>
            break;
