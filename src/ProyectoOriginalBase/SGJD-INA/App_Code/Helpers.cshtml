                <i class="fa fa-fw fa-archive">&nbsp;</i>
                @Nombre
            </span>
            break;
            // Fin seguimientos
    }
}

@helper Descripcion(string Texto) {
    if (Texto.Length > 256) {
        <span>@string.Format("{0}...", Texto.Substring(0, 255))</span>
    }
    else {
        <span>@Texto</span>
    }
}

@helper DescripcionComoTitulo(string Texto) {
    if (Texto.Length > 50) {
        <span>@string.Format("{0}...", Texto.Substring(0, 50))</span>
    }
    else {
        <span>@Texto</span>
    }}