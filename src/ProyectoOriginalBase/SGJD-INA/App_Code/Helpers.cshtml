@helper Estado(string Codigo, string Nombre) {
    switch (Codigo) {
        // Sesiones
        case "SES-PEND":
            <span class="blue-grey-text">
                <i class="fa fa-fw fa-user-clock">&nbsp;</i>
                @Nombre
            </span>
            break;
        case "SES-EJEC":
            <span class="teal-text">
                <i class="fa fa-fw fa-user-check">&nbsp;</i>
                @Nombre
            </span>
            break;
