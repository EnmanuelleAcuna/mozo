        // Ordenes del Día
        case "OD-BORR":
            <span class="blue-grey-text">
                <i class="fa fa-fw fa-edit">&nbsp;</i>
                @Nombre
            </span>
            break;
        case "OD-VB":
            <span class="green-text">
                <i class="fa fa-fw fa-user-check">&nbsp;</i>
                @Nombre
            </span>
            break;
        case "OD-CONV":
            <span class="blue-grey-text">
                <i class="fa fa-fw fa-user-clock">&nbsp;</i>
                @Nombre
            </span>
            break;
        case "OD-APROB":
            <span class="green-text">
                <i class="fa fa-fw fa-check">&nbsp;</i>
                @Nombre
            </span>
            break;
        case "OD-EJEC ":
            <span class="blue-grey-text">
                <i class="fa fa-fw fa-archive">&nbsp;</i>
                @Nombre
            </span>
            break;
        // Fin de Ordenes del Día

        // Acuerdos
        case "ACU-BORR":
            <span class="blue-grey-text">
                <i class="fa fa-fw fa-edit">&nbsp;</i>
                @Nombre
            </span>
            break;
        case "ACU-VB":
            <span class="green-text">
                <i class="fa fa-fw fa-user-check">&nbsp;</i>
                @Nombre
            </span>
            break;
        case "ACU-FIRM":
            <span class="blue-text">
                <i class="fa fa-fw fa-signature">&nbsp;</i>
                @Nombre
            </span>
            break;
        case "ACU-NOTI":
