@using SGJD_INA.Models.Entities

@model VistaPerfil

@{
    Layout = null;
}

<h6 class="center text-uppercase font-bold mb-3 fz-1r black-text">Eliminar permiso de vista al perfil</h6>

@using (Html.BeginForm("Eliminar", "VistaPerfil", FormMethod.Post, new { onsubmit = "return SubmitForm(this)", autocomplete = "off" })) {
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.IdPerfil)
    @Html.HiddenFor(model => model.IdVista)
    @Html.HiddenFor(model => model.Permiso)

    <div class="center mb-2 fz-1r black-text">
        ¿Desea eliminar la vista
        <label class="font-bold fz-1r black-text">
            @Html.DisplayFor(model => model.Vista.NombreVista)
        </label>
        del perfil
        <label class="font-bold fz-1r black-text">
            @Html.DisplayFor(model => model.Perfil.Name)?
        </label>
    </div>

    <section class="section center">
        <button type="submit" value="Eliminar" title="Eliminar" class="btn btn-small yellow black-text font-bold waves-effect waves-light btn-accion">
            Eliminar
        </button>

        <button type="button" title="Cancelar" value="Cancelar" class="btn btn-small grey lighten-3 red-text font-bold waves-effect btn-accion" onclick="CerrarDialog()">
            Cancelar
        </button>
    </section>
}