@using SGJD_INA.Models.Entities

@model VistaPerfil

@{
    Layout = null;
}

<h6 class="center text-uppercase font-bold fz-1r black-text">
    Editar permiso de vista al perfil
</h6>

@using (Html.BeginForm("Editar", "VistaPerfil", FormMethod.Post, new { onsubmit = "return SubmitFormVistaPerfilEditar(this)", autocomplete = "off" })) {

    /**/
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "data-error" })
    @Html.HiddenFor(model => model.IdPerfil)
    @Html.HiddenFor(model => model.IdVista, new { @id = "vista" })
    @*@Html.Hidden("idPerfil", (object)ViewBag.Perfil.Id)*@
    @Html.HiddenFor(m => m.Permiso)

    <p class="pt-1 pb-1">
        <label class="fz-1r">Perfil: </label>
        @Html.DisplayFor(model => model.Perfil.Name)
    </p>

    <p>
        <label class="fz-1r">Vista: </label>
        @Html.DisplayFor(model => model.Vista.NombreVista)
    </p>

    <div class="input-field">
        <label class="po-relative fz-1 focus-text">Permisos</label>
        <p>
            <label>
                <input id="ver" name="ver" type="checkbox" value="on" checked="checked" disabled="disabled" />
                <span>Ver</span>
            </label>
        </p>
        <p>
            <label>
                <input id="crear" name="crear" type="checkbox" />
                <span class="black-text">Crear</span>
            </label>
        </p>
        <p>
            <label>
                <input id="editar" name="editar" type="checkbox" />
                <span class="black-text">Editar</span>
            </label>
        </p>
        <p>
            <label>
                <input id="eliminar" name="eliminar" type="checkbox" />
                <span class="black-text">Eliminar</span>
            </label>
        </p>
    </div>

    <section class="section">
        <button type="submit" title="Guardar" value="Guardar" class="btn btn-small yellow black-text font-bold waves-effect waves-light btn-accion">
            Guardar
        </button>
        <button type="button" title="Cancelar" value="Cancelar" class="btn btn-small grey lighten-3 red-text font-bold waves-effect btn-accion" onclick="CerrarDialog()">
            Cancelar
        </button>
    </section>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}