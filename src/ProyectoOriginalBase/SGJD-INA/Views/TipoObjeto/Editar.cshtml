@using SGJD_INA.Models.ViewModels

@model EditarTipoObjetoViewModel

@{
    ViewBag.Title = "Editar Tipo de Objeto";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

@* Encabezado / Título del PopUp / Modal / Dialog *@
<h6 class="center text-uppercase mb-2">
    Editar Tipo de Objeto
</h6>

@using (Html.BeginForm("Editar", "TipoObjeto", FormMethod.Post, new { onsubmit = "return SubmitForm(this)", autocomplete = "off" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "data-error" })

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.NombreTabla)

    <div class="row mb-0">
        <div class="col s12">
            <div class="input-field">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "validate" } })
                @Html.LabelFor(model => model.Descripcion)
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "helper-text" })
            </div>
        </div>
    </div>

    <div class="row mb-0">
        <div class="col s12">
            @Html.LabelFor(model => model.NombreTabla, new { @class = "active" })
            <p>@Html.DisplayFor(model => model.NombreTabla)</p>
        </div>
    </div>

    <div class="row mb-0">
        <div class="col s12 m5">
            <div class="input-field">
                @Html.EditorFor(model => model.Consecutivo, new { htmlAttributes = new { @class = "validate" } })
                @Html.LabelFor(model => model.Consecutivo, new { @class = "active" })
                @Html.ValidationMessageFor(model => model.Consecutivo, "", new { @class = "helper-text" })
            </div>
        </div>
        <div class="col s12 m7">
            <div class="input-field">
                @Html.EditorFor(model => model.Nomenclatura, new { htmlAttributes = new { @class = "validate" } })
                @Html.LabelFor(model => model.Nomenclatura, new { @Class = "active" })
                @Html.ValidationMessageFor(model => model.Nomenclatura, "", new { @class = "helper-text" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m6">
            @Html.LabelFor(model => model.ParametroEdicion)
            @Html.EditorFor(model => model.ParametroEdicion)
        </div>

        <div class="col s12 m6">
            @Html.LabelFor(model => model.ParametroEncabezadoPie)
            @Html.EditorFor(model => model.ParametroEncabezadoPie)
        </div>
    </div>

    <div class="center">
        <button type="submit" title="Guardar" value="Guardar" class="btn btn-small yellow black-text waves-effect waves-light font-bold fz-0-8r">
            Guardar
        </button>

        <button type="button" title="Cancelar" value="Cancelar" class="btn btn-small grey lighten-3 red-text waves-effect fz-0-8r" onclick="CerrarDialog()">
            Cancelar
        </button>
    </div>
}

@section Scripts { }