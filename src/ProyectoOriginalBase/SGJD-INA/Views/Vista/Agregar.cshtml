@using SGJD_INA.Models.Entities

@model Vista

@{
    Layout = null;
}

<h6 class="center text-uppercase font-bold fz-1r black-text">
    Agregar Vista
</h6>

@using (Html.BeginForm("Agregar", "Vista", FormMethod.Post, new { onsubmit = "return SubmitForm(this)", autocomplete = "off" })) {

    /**/
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "data-error" })

    <div class="input-field mt-3">
        @Html.EditorFor(model => model.NombreVista, new { @class = "validate" })
        @Html.LabelFor(model => model.NombreVista)
        @Html.ValidationMessageFor(model => model.NombreVista, "", new { @class = "helper-text" })
    </div>

    <div class="input-field pt-0">
        <label class="po-relative fz-1 focus-text">Ruta</label>
        @Html.DropDownListFor(model => model.DireccionVista, new SelectList(ViewBag.Vista, "", "", "direccionVista"), new { @class = "browser-default mt-1" })
        @Html.ValidationMessageFor(model => model.DireccionVista, "", new { @class = "helper-text" })
    </div>

    <section class="section center">
        <button type="submit" title="Agregar" value="Agregar" class="btn btn-small yellow black-text font-bold waves-effect waves-light btn-accion">
            Agregar
        </button>
        <button type="button" title="Cancelar" value="Cancelar" class="btn btn-small grey lighten-3 red-text font-bold waves-effect btn-accion" onclick="CerrarDialog()">
            Cancelar
        </button>
    </section>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}