@using SGJD_INA.Models.Entities

@model Vista

@{
    Layout = null;
}

<h6 class="center text-uppercase font-bold fz-1r black-text">
    Editar Vista
</h6>

@using (Html.BeginForm("Editar", "Vista", FormMethod.Post, new { onsubmit = "return SubmitForm(this); return false;", autocomplete = "off" })) {

    /**/
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "data-error" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.DireccionVista)

    <div class="input-field mt-3">
        @Html.TextBoxFor(m => m.NombreVista, new { @class = "validate" })
        @Html.LabelFor(m => m.NombreVista)
        @Html.ValidationMessageFor(m => m.NombreVista, "", new { @class = "helper-text" })
    </div>

    <div class="input-field pt-0">
        <label class="po-relative fz-1 focus-text">Ruta:</label>
        @Html.DisplayFor(m => m.DireccionVista)
    </div>

    <section class="section center">
        <button type="submit" title="Guardar" value="Guardar" class="btn btn-small yellow black-text font-bold waves-effect waves-light btn-accion">
            Guardar
        </button>
        <button type="button" title="Cancelar" value="Cancelar" class="btn btn-small grey lighten-3 red-text font-bold waves-effect btn-accion" onclick="CerrarDialog()">
            Cancelar
        </button>
    </section>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}