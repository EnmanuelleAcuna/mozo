@using SGJD_INA.Models.Entities

@model Vista

@{
    Layout = null;
}

<h6 class="center text-uppercase font-bold fz-1r black-text">
    Eliminar Vista
</h6>

@using (Html.BeginForm("Eliminar", "Vista", FormMethod.Post, new { onsubmit = "return SubmitForm(this)", autocomplete = "off" })) {

    /**/
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.NombreVista)
    @Html.HiddenFor(m => m.DireccionVista)

    <div class="fz-1r black-text mt-3 mb-2 center">
        ¿Desea eliminar la vista:
        <label class="font-bold fz-1r black-text">@Html.DisplayFor(model => model.NombreVista)</label>?
    </div>

    <section class="section center">
        <button type="submit" title="Eliminar" value="Eliminar" class="btn btn-small yellow black-text font-bold waves-effect waves-light btn-accion">
            Eliminar
        </button>
        <button type="button" title="Cancelar" value="Cancelar" class="btn btn-small grey lighten-3 red-text font-bold waves-effect btn-accion" onclick="CerrarDialog()">
            Cancelar
        </button>
    </section>
}