@using SGJD_INA.Models.ViewModels

@model EditarSeccionViewModel

@{
    ViewBag.Title = "Editar seccion";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

<h6 class="center text-uppercase">
    Editar Sección
</h6>

@using (Html.BeginForm("Editar", "Seccion", FormMethod.Post, new { onsubmit = "return SubmitForm(this); return false;", autocomplete = "off" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "data-error" })
    @Html.HiddenFor(model => model.IdSeccion)

    <div class="row mb-0">
        <div class="col s12">
            <div class="input-field">
                @Html.EditorFor(m => m.Descripcion, new { htmlAttributes = new { @class = "validate width-320px" } })
                @Html.LabelFor(m => m.Descripcion, new { @class = "active" })
                @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "helper-text" })
            </div>
        </div>
    </div>

    <div class="center">
        <button type="submit" title="Guardar" value="Guardar" class="btn btn-small yellow black-text waves-effect waves-light font-bold fz-0-8r">
            Guardar
        </button>

        <button type="button" title="Cancelar" value="Cancelar" class="btn btn-small grey lighten-3 red-text waves-effect fz-0-8r" onclick="CerrarDialog()">
            Cancelar
        </button>
    </div>
}
