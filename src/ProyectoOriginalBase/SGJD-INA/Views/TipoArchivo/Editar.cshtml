@using SGJD_INA.Models.ViewModels

@model EditarTipoArchivoViewModel

@{
    ViewBag.Title = "Editar Tipo de Objeto";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

@* Encabezado / Título del PopUp / Modal / Dialog *@
<h6 class="center text-uppercase mb-2">
    Editar Tipo de Archivo
</h6>

@using (Html.BeginForm("Editar", "TipoArchivo", FormMethod.Post, new { onsubmit = "return SubmitFormTipoArchivo(this)", autocomplete = "off" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "data-error" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Extension)

    <div class="row mb-0">
        <div class="col s12">
            @Html.LabelFor(model => model.Extension, new { @class = "active" })
            <p>@Html.DisplayFor(model => model.Extension)</p>
        </div>
    </div>

    <div class="row mb-0">
        <div class="col s12">
            <div class="input-field">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "validate", placeholder = "Descripción del tipo de archivo" } })
                @Html.LabelFor(model => model.Descripcion, new { @class = "active" })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "helper-text" })
            </div>
        </div>
    </div>

    <div class="center">
        <button type="submit" title="Guardar" value="Guardar" class="btn btn-small yellow black-text waves-effect waves-light font-bold fz-0-8r">
            Guardar
        </button>

        <button type="button" title="Cancelar" value="Cancelar" class="btn btn-small grey lighten-3 red-text waves-effect fz-0-8r" onclick="CerrarDialog()">
            Cancelar
        </button>
    </div>
}

@section Scripts { }