@using SGJD_INA.Models.ViewModels

@model AgregarTipoArchivoViewModel

@{
    ViewBag.Title = "Agregar Tipo de Archivo";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

@* Encabezado / Título del PopUp / Modal / Dialog *@
<h6 class="center text-uppercase mb-2">
    Agregar Tipo de Archivo
</h6>

@using (Html.BeginForm("Agregar", "TipoArchivo", FormMethod.Post, new { onsubmit = "return SubmitFormTipoArchivo(this)", autocomplete = "off" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "data-error" })

    <div class="row mb-0">
        <div class="col s12">
            <div class="input-field">
                @Html.LabelFor(model => model.Nombre, new { @class = "active" })
                @Html.DropDownListFor(model => model.Nombre, new SelectList(ViewBag.ListaTipoArchivo, "Nombre", "Nombre"), "Seleccione un tipo de archivo", new { @class = "browser-default fz-0-8r" })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "helper-text" })
            </div>
        </div>
    </div>

    <div class="row mb-0">
        <div class="col s12">
            <div class="input-field">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "validate", placeholder = "Descripción del tipo de archivo" } })
                @Html.LabelFor(model => model.Descripcion, new { @class = "active" })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "helper-text" })
            </div>
        </div>
    </div>

    <div class="center">
        <button type="submit" title="Agregar" value="Agregar" class="btn btn-small yellow black-text font-bold waves-effect waves-light fz-0-8r">
            Agregar
        </button>
        <button type="button" title="Cancelar" value="Cancelar" class="btn btn-small grey lighten-3 red-text waves-effect fz-0-8r" onclick="CerrarDialog()">
            Cancelar
        </button>
    </div>
}

@section Scripts { }