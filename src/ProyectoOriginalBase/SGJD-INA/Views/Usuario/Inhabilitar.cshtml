@using SGJD_INA.Models.ViewModels

@model HabilitarInhabilitarUsuarioViewModel

@{
    ViewBag.Title = "Habilitar Usuario";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

<h6 class="center text-uppercase mb-2">
    Inhabilitar Usuario
</h6>

@using (Html.BeginForm("Inhabilitar", "Usuario", FormMethod.Post, new { onsubmit = "return SubmitForm(this)", autocomplete = "off" })) {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Nombre)

    <div class="mb-2 black-text fz-1r">
        ¿Desea inhabilitar el usuario:
        <label class="font-bold fz-1r black-text">
            @Html.DisplayFor(m => m.Nombre)
        </label>?
    </div>

    <div class="center">
        <button title="Inhabilitar" value="Inhabilitar" class="btn btn-small yellow black-text font-bold waves-effect waves-light fz-0-8r">
            Inhabilitar
        </button>
        <button type="button" title="Cancelar" value="Cancelar" class="btn btn-small grey lighten-3 red-text waves-effect fz-0-8r" onclick="CerrarDialog()">
            Cancelar
        </button>
    </div>
}

@section Scripts { }