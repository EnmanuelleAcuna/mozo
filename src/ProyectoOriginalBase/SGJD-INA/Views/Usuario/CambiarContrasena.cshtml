@using SGJD_INA.Models.ViewModels

@model CambiarContrasenaViewModel

@{
    ViewBag.Title = "Agregar Tipo de Objeto";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

@* Encabezado / Título del PopUp / Modal / Dialog *@
<h6 class="center text-uppercase mb-2">
    Cambiar contraseña
</h6>

@using (Html.BeginForm("CambiarContrasena", "Usuario", FormMethod.Post, new { onsubmit = "return SubmitFormPassword(this)", autocomplete = "off" })) {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IdUsuario)
    @Html.HiddenFor(m => m.Nombre)

    <p class="center font-bold">
        @Html.DisplayFor(model => model.Nombre)
    </p>

    <div class="row mb-0">
        <div class="col s12">
            <div class="input-field">
                @Html.EditorFor(model => model.Contrasena, new { htmlAttributes = new { @class = "validate" } })
                @Html.LabelFor(model => model.Contrasena)
                @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "helper-text" })
            </div>
        </div>
    </div>

    <div class="row mb-0">
        <div class="col s12">
            <div class="input-field">
                @Html.EditorFor(model => model.ConfirmarContrasena, new { htmlAttributes = new { @class = "validate" } })
                @Html.LabelFor(model => model.ConfirmarContrasena)
                @Html.ValidationMessageFor(model => model.ConfirmarContrasena, "", new { @class = "helper-text" })
            </div>
        </div>
    </div>

    <div class="center">
        <button type="submit" value="Guardar" title="Guardar" class="btn btn-small yellow black-text waves-effect waves-light fz-0-8r font-bold">
            Cambiar contraseña
        </button>

        <button type="button" title="Cancelar" value="Cancelar" class="btn btn-small grey lighten-3 red-text waves-effect fz-0-8r" onclick="CerrarDialog()">
            Cancelar
        </button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}