<!-- Modal para agregar un tema -->
<div id="ModalAgregarTema" class="modal">
    <div class="modal-content px-0 py-1">
        <input hidden type="text" id="IdSeccion" />

        <div class="row">
            <div class="col s12">
                <ul class="tabs tabs-fixed-width">
                    <li class="tab col s3">
                        <a href="#test1" class="active blue-text">
                            Agregar nuevo tema a
                            <span id="NombreSeccion" class="font-bold blue-text"></span>
                        </a>
                    </li>
                    <li class="tab col s3">
                        <a class="blue-text" href="#test2">
                            Agregar tema pendiente
                        </a>
                    </li>
                </ul>
            </div>

            @* Agregar nuevo tema *@
            <div id="test1" class="col s12">
                <div class="input-field mt-2">
                    <input type="text" id="TituloNuevoTema" name="TituloNuevoTema" class="max-width-100 validate" />
                    <label for="TituloNuevoTema">Número de Oficio / Documento / Título del tema</label>
                </div>

                <div class="input-field">
                    <textarea type="text" id="ResumenNuevoTema" name="ResumenNuevoTema" class="materialize-textarea validate"></textarea>
                    <label for="ResumenNuevoTema">Descripción o resumen del Oficio / Documento</label>
                </div>

                <div>
                    <button id="BtnAgregarTema" class="btn btn-small waves-effect yellow black-text font-bold" title="Agregar nuevo tema" onclick="AgregarNuevoTema()">Agregar</button>
                    <a class="modal-close btn btn-small grey lighten-3 waves-effect black-text">Cancelar</a>
                </div>
            </div>

            @* Agregar tema pendiente *@
            <div id="test2" class="col s12">
                <div class="row">
                    <div class="col s12">
                        <table id="TablaTemaPendiente" class="table responsive display width-100 bordered cell-border">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Resumen</th>
                                    <th></th>
                                </tr>
                            </thead>                            
                        </table>
                    </div>
                </div>

                <div class="text-center">
                    <a class="modal-close btn btn-small grey lighten-3 waves-effect blue-text">Cerrar</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}