@using SGJD_INA.Models.ViewModels

@model AgregarCorreoUnidadAcuerdoViewModel

@{
    ViewBag.Title = "Agregar Correos de Unidades para Acuerdos";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

@* Encabezado / Título del PopUp / Modal / Dialog *@
<h6 class="center text-uppercase mb-2">
    Agregar Correo a Unidad
</h6>

@using (Html.BeginForm("Agregar", "CorreoUnidadAcuerdo", FormMethod.Post, new { onsubmit = "return SubmitForm(this)", autocomplete = "off" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "data-error" })

    <div class="row mb-0">
        <div class="col s12">
            <div class="input-field">
                @Html.LabelFor(model => model.IdUnidad, new { @class = "active" })
                @Html.DropDownListFor(model => model.IdUnidad, new SelectList(ViewBag.ListaUnidades, "Value", "Text"), "Seleccione una unidad", new { @id = "ListaUnidades", @class = "browser-default fz-0-8r" })
                @Html.ValidationMessageFor(model => model.IdUnidad, "", new { @class = "helper-text" })
            </div>
        </div>
    </div>

    <div class="row mb-0">
        <div class="col s12">
            <div class="input-field">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "validate" } })
                @Html.LabelFor(model => model.Nombre, new { @class = "active" })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "helper-text" })
            </div>
        </div>
    </div>

    <div class="row mb-0">
        <div class="col s12">
            <div class="input-field">
                @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "validate" } })
                @Html.LabelFor(model => model.Correo, new { @class = "active" })
                @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "helper-text" })
            </div>
        </div>
    </div>

    <div class="center">
        <button type="submit" title="Agregar" value="Agregar" class="btn btn-small yellow black-text font-bold waves-effect waves-light fz-0-8r">
            Agregar
        </button>
        <button type="button" title="Cancelar" value="Cancelar" class="btn btn-small grey lighten-3 red-text font-bold waves-effect fz-0-8r" onclick="CerrarDialog()">
            Cancelar
        </button>
    </div>
}