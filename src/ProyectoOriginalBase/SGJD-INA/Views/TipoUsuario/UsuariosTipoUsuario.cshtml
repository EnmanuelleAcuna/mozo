@using SGJD_INA.Models.ViewModels

@model IEnumerable<UsuarioParaSelectViewModel>

@{
    Layout = null;
}

<h6 class="center text-uppercase">
    Usuarios del tipo <span class="blue-text">@ViewBag.NombreTipo</span>
</h6>

@if (Model.Count() == 0) {
    <p class="center font-bold">
        No hay usuarios
    </p>
}
else {
    foreach (var Usuario in Model) {
        <p>
            <span class="font-bold">@Html.DisplayFor(modelItem => Usuario.Identificacion) - </span>
            @Html.DisplayFor(modelItem => Usuario.Nombre)
        </p>
    }
}

<div class="center">
    <button type="button" title="Cerrar" value="Cerrar" class="btn btn-small grey lighten-3 black-text waves-effect fz-0-8r" onclick="CerrarDialog()">
        Cerrar
    </button>
</div>