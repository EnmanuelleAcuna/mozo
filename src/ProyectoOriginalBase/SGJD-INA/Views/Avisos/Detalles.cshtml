@using SGJD_INA.Models.ViewModels;

@model DetallesAvisoViewModel

@{
    Layout = null;
}

<h6 class="center text-uppercase">
    Detalles del aviso
</h6>

<p class="center font-bold">
    @Html.DisplayFor(model => model.Nombre)
</p>

<p>
    <span class="font-bold">@Html.DisplayNameFor(model => model.Tipo):</span>
    @Html.DisplayFor(model => model.Tipo)
</p>

<p>
    <span class="font-bold">@Html.DisplayNameFor(model => model.TipoDestinatario):</span>
    @Html.DisplayFor(model => model.TipoDestinatario)
</p>

@if (!string.IsNullOrEmpty(Model.NombreUnidad)) {
    <p>
        <span class="font-bold">@Html.DisplayNameFor(model => model.NombreUnidad):</span>
        @Html.DisplayFor(model => model.NombreUnidad)
    </p>
}

<p>
    <div>
        @Html.Raw(Model.Mensaje)
    </div>
</p>

<div class="center">
    <button type="button" title="Cerrar" value="Cerrar" class="btn btn-small grey lighten-3 blue-text waves-effect fz-0-8r" onclick="CerrarDialog()">
        Cerrar
    </button>
</div>