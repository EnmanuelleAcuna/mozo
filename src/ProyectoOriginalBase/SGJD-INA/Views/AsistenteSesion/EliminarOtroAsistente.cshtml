@using SGJD_INA.Models.ViewModels

@model EliminarOtroAsistenteViewModel

@{
    ViewBag.Title = "Eliminar Otro asistente sesión";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

@* Encabezado / Título del PopUp / Modal / Dialog *@
<h6 class="center text-uppercase mb-2">
    Eliminar otro asistente a sesión
</h6>

@using (Html.BeginForm("EliminarOtroAsistente", "AsistenteSesion", FormMethod.Post, new { onsubmit = "return SubmitForm(this);", autocomplete = "off" })) {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
  
    <div class="mt-2 mb-2 center fz-1r black-text">
        ¿Desea eliminar el asistente a sesión:
        <span class="font-bold fz-1r black-text">@Html.DisplayFor(model => model.Nombre)</span>?
    </div>

    <section class="section center">
        <button type="submit" title="Eliminar" value="Eliminar" class="btn btn-small yellow black-text font-bold waves-effect waves-light btn-accion">
            Eliminar
        </button>
        <button type="button" title="Cancelar" value="Cancelar" class="btn btn-small grey lighten-3 red-text font-bold waves-effect btn-accion" onclick="CerrarDialog()">
            Cancelar
        </button>
    </section>
}

