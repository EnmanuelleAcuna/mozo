@using SGJD_INA.Models.ViewModels

@model EditarRolViewModel

@{
    ViewBag.Title = "Editar Tipo de Objeto";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

@* Encabezado / Título del PopUp / Modal / Dialog *@
<h6 class="center text-uppercase mb-2">
    Editar Rol
</h6>

@using (Html.BeginForm("Editar", "Perfil", FormMethod.Post, new { onsubmit = "return SubmitForm(this)", autocomplete = "off" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "data-error" })

    @Html.HiddenFor(model => model.IdRol)

    <div class="row">
        <div class="col s12">
            <div class="input-field">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "validate" } })
                @Html.LabelFor(m => m.Nombre)
                @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "helper-text" })
            </div>
        </div>
    </div>

    <div class="center">
        <button type="submit" title="Guardar" value="Guardar" class="btn btn-small yellow black-text waves-effect waves-light fz-0-8r">
            <span class="font-bold">Guardar</span>
        </button>

        <button type="button" title="Cancelar" value="Cancelar" class="btn btn-small grey lighten-3 red-text waves-effect fz-0-8r" onclick="CerrarDialog()">
            <span class="font-bold">Cancelar</span>
        </button>
    </div>
}

@section Scripts { }